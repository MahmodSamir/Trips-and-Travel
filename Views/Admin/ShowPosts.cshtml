@model IEnumerable<Trips_and_Travel.Models.Post>

@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2 style="background-color:wheat;text-align:center">All Posts</h2>

<table class="table table-bordered table-condensed table-hover text-center"style="background-color:white;font-size:20px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AgencyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th class="text-center">Actions</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AgencyName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Details)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Destination)
    </td>
    <td>
        <img src="@Url.Content(item.Photo)" width="100" height="100" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)E£
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostDate)
    </td>
    <td>
        <a href="@Url.Action("Edit", "Admin", new {id = item.Id })" class="btn btn-success">
            <span class="glyphicon glyphicon-edit"></span>
            Edit
        </a> |
        <a href="@Url.Action("Delete", "Admin", new {id = item.Id })" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove "></span>
            Delete
        </a>
    </td>
</tr>
}

</table>
