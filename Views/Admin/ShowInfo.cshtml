@model Trips_and_Travel.Models.User

@{
    ViewBag.Title = "Info";
    if (Session["Role"].Equals("Admin"))
    {
        Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    }
    else if (Session["Role"].Equals("Agency"))
    {
        Layout = "~/Views/Shared/_FactoryLayout.cshtml";

    }
}

<h2 style="background-color:wheat;text-align:center">Your Info</h2>

<div>
    <dl class="dl-horizontal" style="float:right;width:80%; background-color:white;font-size:20px">
        @{ if (Session["Role"].Equals("Agency"))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.userName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.userName)
                </dd>
            }
        }
        <dt>
            @Html.DisplayNameFor(model => model.Fname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            <img src="@Url.Content(Model.Photo)" width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Role)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

    </dl>
</div>
<p style="font:bold;float:right;width:80%;margin:10px">
    <a href="@Url.Action("Edit1", "Admin", new {id = Model.Id })" class="btn btn-success">
        <span class="glyphicon glyphicon-edit"></span>
        Edit
    </a> |
    @{
        if (Session["Role"].Equals("Admin"))
        {
            @Html.ActionLink("Back to List", "Index")
        }
        else if (Session["Role"].Equals("Agency"))
        {
            @Html.ActionLink("Back to List", "Index", "Posts")
        }
    }
</p>
