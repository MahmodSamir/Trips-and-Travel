<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="        background-image: url(../../Images/T4.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        color: #000313
    ">
    <div class="navbar navbar-inverse navbar-fixed-top" style= "background-color: #000313;">
        <div class="container">
            <div class="navbar-header">

            </div>

            <div class="navbar-collapse collapse" style="margin-left:00px;">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profile", "ShowInfo", "Admin", new { })</li>
                    <li>@Html.ActionLink("Users", "ShowUsers", "Admin")</li>
                    <li>@Html.ActionLink("Posts", "ShowPosts", "Admin")</li>
                    <li>@Html.ActionLink("Posts Requests", "Index", "Admin")</li>
                    <li style="margin-left:700px;">@Html.ActionLink("Logout", "Logout", "Users")</li>

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="font-size:22px">
        @RenderBody()
        <hr />
        <footer class="nav navbar-fixed-bottom" style="color:yellow">
            <div class="navbar navbar-inverse navbar-fixed-bottom" style= "background-color: #000313;">
                <div class="container">
                    <div class="navbar-header">
                        <h3>FCAIH - Internet Applications 2021 &copy;</h3>
                    </div>

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
