@model IEnumerable<Trips_and_Travel.Models.Post>

@{
    ViewBag.Title = "Home";
    if(Session["Role"] == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
    else
    {
        Layout = "~/Views/Shared/_WallLayout.cshtml";

    }


}
<h2 style="text-align:center;background-color:wheat">Hello @Session["username"]</h2>
<hr />
<h2 style="        text-align: center;
        background-color:blueviolet
">Trip Posts</h2>


<table class="table table-bordered table-hover table-condensed text-center" style="background-color:white;color:darkred" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AgencyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>


    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AgencyName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Details)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Destination)
    </td>
    <td>
        <img src="@Url.Content(item.Photo)" width="100" height="100" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)E£
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostDate)
    </td>

</tr>
}

</table>
