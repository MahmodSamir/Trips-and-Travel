@model IEnumerable<Trips_and_Travel.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2 style="background-color:wheat;text-align:center">All Users</h2>

<h4>
    <a href="@Url.Action("Create","Admin")" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Add User
    </a>
</h4>

<table class="table table table-bordered table-condensed table-hover text-center"style="background-color:white;font-size:20px;">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Fname)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Lname)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th class="text-center"> 
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th class="text-center">
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phoneNumber)
        </td>
        <td>
            <img src="@Url.Content(item.Photo)" width="80" height="80" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit1", new { id=item.Id }) |*@
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@

            <a href="@Url.Action("Delete1", "Admin", new {id = item.Id })" class="btn btn-danger">
                <span class="glyphicon glyphicon-remove "></span>
                Delete
            </a>
        </td>
    </tr>
}

</table>
